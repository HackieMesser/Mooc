#input_students=input("Student information: ")
#input_exercises=input("Exercises completed: ")
input_students="students1.csv"
input_exercises="exercises1.csv"

names={}
grades={}
with open(input_students) as students:
    
    listo=[]
    for line in students:
        listy=line.split(";")
        listeen=[]
        for part in listy:
            part=part.strip()
            listeen.append(part)
        listo.append(listeen)
    listo=listo[1:]
    print(listo)
    for x in listo:
        names[x[0]]=x[1]+" "+x[2]
        #print(names)

with open(input_exercises) as exercises:
    lista=[]
    for line in exercises:
        line=line.split(";")
        listu=[]
        for part in line:
            part=part.strip()
            listu.append(part)
        lista.append(listu)
    lista=lista[1:]
    grade=0
    for x in lista:
        for y in range(1,len(x)):
            grade+=int(x[y])
        grade=grade/(len(x)-1)
        print(grade)
        #grades[x]=grade
    print(grades)
            


