#everything reveresed

def everything_reversed(a):
    c=[]
    
    if len(a)>1:
        for i in a[::-1]:

            c.append(i[::-1])


    return c

#most_common_character
def most_common_character (a: str):
    new=a[0]
    for i in a:
        if a.count(new)<a.count(i):
            new=i 
    return new
#no_vowels

def no_vowels(my_string: str):
    vowels = "aeiou"
    new=""
    for i1 in my_string:
        if i1 not in vowels:
            new+=i1

    return new

if __name__ == "__main__":
    my_string="abc"

#no shouting
def no_shouting(my_list:list):
    new=[]
    for word in my_list:
        if word.isupper() ==False:
            new.append(word)
    return new

#longest_series_of_neighbours
def longest_series_of_neighbours(my_list):
    i2=0
    start=True
    new=[]
    chain=0
    gap=0
    index=0
    chain_record=0
    for i in my_list:
        if start ==True:
            new.append(i)
            start=False
            if chain_record<len(new):
                chain_record = len(new)

        elif i==(new[-1])+1 or i==(new[-1])-1:
            new.append(i)
            if chain_record<len(new):
                chain_record = len(new)
        else:
            if chain_record<len(new):
                chain_record = len(new)
            new=[]
            new.append(i)
    return chain_record
