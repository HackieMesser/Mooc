#some of these 4c are in 4b
#addtion and removal
list_a=[]
print("The list is now",list_a)
add_remove_exit=input("a(d)d, (r)emove or e(x)it: ")
while add_remove_exit!= "x":
    if add_remove_exit == "d":
        list_a.append((len(list_a)+1))
        print("The list is now",list_a)
    elif add_remove_exit == "r":
        list_a.pop(-1)
        print("The list is now",list_a)
    add_remove_exit=input("a(d)d, (r)emove or e(x)it: ")
print("Bye!")
#note to self can put list in f string
list_a=[]
print(f"The list is now {list_a}")
add_remove_exit=input("a(d)d, (r)emove or e(x)it: ")
while add_remove_exit!= "x":
    if add_remove_exit == "d":
        list_a.append((len(list_a)+1))
        print(f"The list is now {list_a}")
    elif add_remove_exit == "r":
        list_a.pop(-1)
        print(f"The list is now {list_a}")
    add_remove_exit=input("a(d)d, (r)emove or e(x)it: ")
print("Bye!")

#sameword twice
my_list =[]
index=0
while True:
    word = input("Word:")
    if word in my_list:
        break
    my_list.append(word)
    index +=1
print("You typed in",index,"different words")
#sameword twice v2
my_list =[]

while True:
    word = input("Word:")
    if word in my_list:
        break
    my_list.append(word)

print("You typed in",len(my_list),"different words")

#list_twice
new_item=""
while True:
    new_item=int(input("New item: "))
    if new_item == 0:
        break
    my_list.append(new_item)
    print(f"The list now: {my_list}")
    print(f"The list in order: {(sorted(my_list))}")
print("Bye!")


#length of list
def length(a: list):
   return  len(a)
#mean
def mean(a: list):
   return  sum(a)/len(a)

#range of list
def range_of_list(a:list):
    a.sort()
    return a[-1]-a[0]
#better
def range_of_list(a:list):
    return max(a)-min(a)
#star studded
string=input("Please type in a string: ")
for x in string:
    print(x)
    print("*")


#negative to positive
n=int(input("Please type in a positive integer: "))
for x in range(-n, n+1):
    if x != 0:
        print(x)
#i think u wanna use "i" for the for loop
n=int(input("Please type in a positive integer: "))
for i in range(-n, n+1):
    if i != 0:
        print(i)
#list of stars

def list_of_stars(a:list):
    for i in a:
        print("*"*i)
if __name__ == "__main__":
    list_of_stars(1)

#anagrams
def anagrams(a: str,b: str):
    return sorted(a) == sorted(b) 
if __name__ == "__main__":
    print(anagrams("rey","yer"))
#palindromes
def main(a):
    a=input("Please type in a palindrome: ")
    return a 
def palindromes(a):
    x=""
    for i in reversed(a):
        i=str(i)
        x+=i
        print(x)
    if a==x:
        print(f"{a} is a palindrome!")
    else:
            print("that wasn't palindrome!")
if __name__ == "__main__":
    palindromes("aa")

#palindromes
def palindromes(word: str):
    x=""
    for i in reversed(word):
        i=str(i)
        x+=i
    return word==x
def main():
    while True:
        word=input("Please type in a palindrome: ")
        if palindromes(word) == True:
            print(word, "is a palindrome!")
            break
        else:
            print("that wasn't a palindrome")
main()    

#sum_of_positives
def sum_of_positives(a: list):
    x=0
    for i in a:
        if i >0:
            x+=i
        else:
            continue
    return x
