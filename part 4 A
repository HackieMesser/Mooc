#Hello Visual Studio Code

while True:
    editor = input("Editor: ").lower()
    if editor == "visual studio code":
        break
    if editor == "word" or editor == "notepad":
        print("awful")
    else:
        print("not good")
print("an excellent choice!")


editor = input("Editor: ").lower()
while editor!= "visual studio code":
    if editor == "notepad" or editor == "word":
        print("awful")
    else:
        print("not good")
    editor = input("Editor: ").lower()
print("an excellent choice!")
