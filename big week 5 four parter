def add_student(students, name):
    students[name]=[]
    return students



def add_course(students, name, course):
    if len(students[name])==0:
        if course[1]==0:
            return students
        else:
            students[name].append(course)
            return students
        
    else:
        for i in students[name]:
            if course[0] == i[0]: 
                if course[1]>i[1]:

                    students[name].remove(i)
                    students[name].append(course)
                    return students
                elif course[1]<i[1]:
                    return students
 
            elif course[1]==0:
                return students
   
        students[name].append(course)
            
def print_student(students, name):
    no_courses="no completed courses"
    if name in students:
        if students[name]!=[]:
            num_courses=len(students[name])
            print(f"{name}:")
            print(f" {num_courses} completed courses:")
            cum_gpa=0
            for x in students[name]:
                index=0
                for i in x:
                    if index==0:
                        c_name=i
                    else:
                        grade=i
                    index+=1
                print("  "+c_name+" "+str(grade))
                cum_gpa+=grade
            print(f" average grade {cum_gpa/num_courses}")
        else:
            print(f"{name}:")
            print(" "+no_courses)
    else:
        print(f"{name}: no such person in the database")


def summary(students):
    print(len(students))
    index=0
    topgpa=0
    for i in students:
        print(len(students[i]))
        if index==0:
            print(students[i])
            print(len(students[i]))
            greatest=students[i]
            glen=len(students[i])
        elif index !=0:
            if glen<len(i):
                greatest=students[i]
                glen=len(students[i])
        cum_gpa=0
        
        #problems start here
        for x in i:
            print(x)
            print(x[1])
            cum_gpa+=x[1]
            if index==0:
                topgpa=cum_gpa/len(students[i])
                topstud=students[i]
            elif cum_gpa/len(i) > topgpa:
                topgpa=cum_gpa/len(students[i])
                topstud=students[i]
    
        index+=1

    print(f"students {len(students)}")
    print(f"most courses completed {glen} {greatest}")
    print(F"best average grade {topgpa} {topstud}")
    
    
    








if __name__ == '__main__':        
    students = {}
    add_student(students, "Peter")
    add_student(students, "Eliza")
    add_course(students, "Peter", ("Data Structures and Algorithms", 1))
    add_course(students, "Peter", ("Introduction to Programming", 1))
    add_course(students, "Peter", ("Advanced Course in Programming", 1))
    add_course(students, "Eliza", ("Introduction to Programming", 5))
    add_course(students, "Eliza", ("Introduction to Computer Science", 4))
    summary(students)
